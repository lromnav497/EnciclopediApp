<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.openjfx.EnciclopediApp.LibraryManagementController">
    <Label text="Book ID" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="textField1" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Book Title" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="textField2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Author" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="textField3" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Publisher" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="textField4" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Year of Publication" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="textField5" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="ISBN" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="textField6" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Number of Copies" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="textField7" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Button text="Add" onAction="#addBook" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <Button text="View" onAction="#viewBooks" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
</GridPane>
